<script>
let love1 = document.getElementById('lop');
let ilu = document.getElementById("ilu");
let body = document.querySelector('body');
let span = document.querySelectorAll('span');
const kedip = setInterval(function(){
  love1.classList.toggle('blink')
},300)

function lp(){
  love1.classList.add("lv2");
  love1.style='transition:1.2s';
  setTimeout(function() {
    ilu.style="opacity:1";
    love1.style="opacity:1";
  }, 1000);
  clearInterval(kedip);
span.forEach((e)=>{
  e.style="visibility:visible"
})
}

  </script>
